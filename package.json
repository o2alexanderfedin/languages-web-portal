{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc --build && npm run build -w @repo/client",
    "build:clean": "tsc --build --clean",
    "dev": "npm run dev -w @repo/server",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx} --fix",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,css}",
    "format:check": "prettier --check packages/*/src/**/*.{ts,tsx,css}",
    "typecheck": "tsc --build --noEmit"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.0.6"
  }
}
